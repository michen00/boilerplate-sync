{
  "name": "boilerplate-sync",
  "version": "1.0.0",
  "description": "GitHub Action to sync project files from boilerplate repositories",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt && npm run normalize-sourcemaps",
    "normalize-sourcemaps": "bash scripts/normalize-sourcemaps.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "boilerplate",
    "sync",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.3",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^22.0.1",
    "minimatch": "^10.2.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.3",
    "globals": "^17.3.0",
    "typescript": "^5.3.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "singleQuote": true
  }
}
